
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/adminCss.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div class="fadeIn first">
                <img src="~/image/logo.png" id="icon" alt="Admin Icon" />
            </div>


            <form>
                <input type="text" id="login" class="fadeIn second" name="login" placeholder="Kullanıcı" required>
                <input type="text" id="password" class="fadeIn third" name="login" placeholder="Parola" required>
                <input type="submit" class="fadeIn fourth" value="Giriş Yap">
            </form>

       
        </div>
    </div>
</body>
</html>
