@model denemenet.Models.detayViewModel
@{
    ViewBag.Title = "yorum";
    Layout = "~/Views/admin/AdminLayout.cshtml";
}

<div class="">



    <div class="row" style="max-height:1000px">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>MESAJ TABLOSU <br />
                   Mesaj Sayısı: @Model.MesajListesi.Count  
                   </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>


                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <p class="text-muted font-13 m-b-30">
                                   Hızlı MESAJ TABLOSU 
                                </p>

                                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">

                                    <thead>
                                        <tr>

                                            <th>Mesaj İD</th>
                                            <th>ÜRÜN</th>
                                            <th>YAYINDA</th>
                                            <th>GÖNDEREN</th>
                                            <th>MAİL</th>

                                            <th>ZAMAN </th>
                                            <th> </th>
                                            <th> </th>
                                        

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var urn in Model.MesajListesi)
                                        {


                                        <tr>
                                            <td>@urn.ID</td>
                                            <td>@urn.urun.Adi</td>
                                            <td>AKTİF</td>
                                            <td>@urn.name</td>
                                            <td>@urn.mail</td>
                                            <td>@urn.Time</td>
                                            @*<td>  <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a></td>*@


                                            <td>    <a href="@Url.Action("yorumedit","adminEWD",new { id=urn.ID })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a></td>
                                            <td>  <a href="@Url.Action("yorumdelete","adminEWD",new { id=urn.ID })" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>


                                        </tr>
                                        }

                                    </tbody>

                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>